<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="login-header">
    <t-image class="logo" src="/images/logo.png" width="120rpx" height="120rpx" shape="round" mode="aspectFit"></t-image>
    <text class="title">社区环境管理</text>
    <text class="subtitle">共建美好家园</text>
  </view>
  <view class="login-form">
    <t-cell-group>
      <t-cell>
        <view slot="title" class="input-label">
          <t-icon name="mobile" size="32rpx" color="#0052d9"></t-icon>
          <text>手机号</text>
        </view>
        <t-input slot="right-icon" type="number" placeholder="请输入手机号" value="{{phone}}" bindchange="onPhoneInput" maxlength="11" clearable="{{true}}" />
      </t-cell>

      <t-cell>
        <view slot="title" class="input-label">
          <t-icon name="lock-on" size="32rpx" color="#0052d9"></t-icon>
          <text>验证码</text>
        </view>
        <view slot="right-icon" class="code-input-wrapper">
          <t-input type="number" placeholder="请输入验证码" value="{{code}}" bindchange="onCodeInput" maxlength="6" clearable="{{true}}" />
          <t-button theme="primary" variant="outline" size="small" bindtap="sendCode" disabled="{{codeBtnDisabled}}" class="code-btn">
            {{codeBtnText}}
          </t-button>
        </view>
      </t-cell>
    </t-cell-group>

    <t-button theme="primary" size="large" block="{{true}}" bindtap="login" disabled="{{loginBtnDisabled}}" class="login-btn">
      <t-icon name="login" size="32rpx" slot="icon"></t-icon>
      {{loginBtnText}}
    </t-button>
  </view>

  <view class="login-footer">
    <text class="tips">登录即表示同意</text>
    <text class="link" bindtap="showPrivacy">《隐私政策》</text>
    <text class="tips">和</text>
    <text class="link" bindtap="showTerms">《服务条款》</text>
  </view>
</view>