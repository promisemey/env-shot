<view class="navigation-bar {{extClass}}">
  <view class="navigation-bar__inner {{ios ? 'ios' : 'android'}}" style="color: {{color}}; background: {{background}}; {{displayStyle}}; {{innerPaddingRight}}; {{safeAreaTop}};">

    <!-- 左侧按钮 -->
    <view class='navigation-bar__left' style="{{leftWidth}};">
      <block wx:if="{{back || homeButton}}">
        <!-- 返回上一页 -->
        <block wx:if="{{back}}">
          <view class="navigation-bar__buttons navigation-bar__buttons_goback">
            <view
              bindtap="back"
              class="navigation-bar__btn_goback_wrapper"
              hover-class="navigation-bar__btn_active"
              hover-stay-time="100"
              aria-role="button"
              aria-label="返回"
            >
              <view class="navigation-bar__button">
                <t-icon name="chevron-left" size="32rpx" color="{{color || '#000000'}}"></t-icon>
              </view>
            </view>
          </view>
        </block>
        <!-- 返回首页 -->
        <block wx:if="{{homeButton}}">
          <view class="navigation-bar__buttons navigation-bar__buttons_home">
            <view
              bindtap="home"
              class="navigation-bar__btn_home_wrapper"
              hover-class="navigation-bar__btn_active"
              aria-role="button"
              aria-label="首页"
            >
              <view class="navigation-bar__button">
                <t-icon name="home" size="32rpx" color="{{color || '#000000'}}"></t-icon>
              </view>
            </view>
          </view>
        </block>
      </block>
      <block wx:else>
        <slot name="left"></slot>
      </block>
    </view>

    <!-- 标题 -->
    <view class='navigation-bar__center'>
      <view wx:if="{{loading}}" class="navigation-bar__loading" aria-role="alert">
        <t-icon name="loading" size="32rpx" color="{{color || '#000000'}}"></t-icon>
      </view>
      <block wx:if="{{title}}">
        <text class="navigation-bar__title">{{title}}</text>
      </block>
      <block wx:else>
        <slot name="center"></slot>
      </block>
    </view>
    
    <!-- 右侧留空 -->
    <view class='navigation-bar__right'>
      <slot name="right"></slot>
    </view>
  </view>
</view>
