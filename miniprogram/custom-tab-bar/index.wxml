<t-tab-bar 
  value="{{selected}}" 
  bind:change="onChange"
  theme="capsule"
  split="{{false}}"
>
  <t-tab-bar-item 
    wx:for="{{list}}" 
    wx:key="pagePath"
    value="{{index}}"
  >
    <t-icon 
      slot="icon" 
      name="{{item.iconName}}" 
      size="48rpx"
    />
    {{item.text}}
  </t-tab-bar-item>
</t-tab-bar>